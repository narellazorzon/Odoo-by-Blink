        <!-- Acción de reporte para ticket térmico 80mm -->
        <record id="action_report_ticket_80mm" model="ir.actions.report">
            <field name="name">Ticket 80mm</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_ar_thermal_ticket.report_ticket_80mm</field>
